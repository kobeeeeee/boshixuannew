<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:background="@drawable/matter_record_bg"
        android:layout_width="match_parent"
        android:layout_height="147dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品名称"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="15.5dp"
            android:id="@+id/textView36"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16.5dp"
            android:layout_marginStart="16.5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="360天长期理财"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="14.5dp"
            android:layout_marginLeft="49dp"
            android:id="@+id/matterName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView36"
            android:layout_toEndOf="@+id/textView36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买时间"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="27dp"
            android:id="@+id/textView37"
            android:layout_below="@+id/textView36"
            android:layout_alignLeft="@+id/textView36"
            android:layout_alignStart="@+id/textView36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.06.07     11:55:09"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:id="@+id/buyTime"
            android:layout_below="@+id/matterName"
            android:layout_alignLeft="@+id/matterName"
            android:layout_alignStart="@+id/matterName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买金额"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="31dp"
            android:id="@+id/textView38"
            android:layout_below="@+id/buyTime"
            android:layout_alignLeft="@+id/textView37"
            android:layout_alignStart="@+id/textView37" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00元"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:id="@+id/buyMoney"
            android:layout_below="@+id/textView37"
            android:layout_alignLeft="@+id/buyTime"
            android:layout_alignStart="@+id/buyTime" />

    </RelativeLayout>
</LinearLayout>
