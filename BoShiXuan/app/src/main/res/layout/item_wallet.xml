<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/walletImageView"
            android:src="@drawable/wallet_drawing"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提款到银行账户"
            android:textSize="16sp"
            android:textColor="@color/wallet_black"
            android:id="@+id/walletListText1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21.5dp"
            android:layout_toRightOf="@+id/walletImageView"
            android:layout_toEndOf="@+id/walletImageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未认证"
            android:textSize="14sp"
            android:id="@+id/walletListText2"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:textColor="@color/wallet_white"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</LinearLayout>
