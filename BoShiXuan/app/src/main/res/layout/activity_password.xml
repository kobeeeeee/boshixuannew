<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/password_bg">
        <include layout="@layout/layout_title_bar"
              android:id="@+id/include" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/boldwhite"
            android:textSize="18sp"
            android:layout_below="@+id/include"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38.5dp" />
        <EditText
            android:id="@+id/inputPhone"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/password_input_normal"
            android:layout_below="@+id/include"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/phone"
            android:layout_marginLeft="25dp"
            android:hint="请输入手机号码"
            android:gravity="left|center"
            android:padding="10dp"
            android:textColorHint="@color/dullgray"
            android:inputType="phone"
            android:textSize="13sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/password_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码 "
            android:textColor="@color/boldwhite"
            android:textSize="18sp"
            android:layout_below="@+id/phone"
            android:layout_alignLeft="@+id/phone"
            android:layout_marginTop="60dp"/>
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/password_input_normal"
            android:layout_below="@+id/inputPhone"
            android:layout_alignLeft="@+id/inputPhone"
            android:layout_marginTop="45dp"
            android:hint="请输入新密码"
            android:gravity="left|center"
            android:padding="10dp"
            android:textColorHint="@color/dullgray"
            android:inputType="textPassword"
            android:textSize="13sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textColor="@color/boldwhite"
            android:textSize="18sp"
            android:layout_below="@+id/password_new"
            android:layout_alignLeft="@+id/password_new"
            android:layout_marginTop="60dp"/>
        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@drawable/register_input"
            android:layout_below="@+id/inputPassword"
            android:layout_alignLeft="@+id/inputPassword"
            android:layout_marginTop="45dp"
            android:hint="确认新密码"
            android:gravity="left|center"
            android:padding="10dp"
            android:textColorHint="@color/dullgray"
            android:inputType="textPassword"
            android:textSize="13sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/code"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_below="@+id/confirm"
            android:layout_alignLeft="@+id/confirm"
            android:layout_marginTop="60dp"/>
        <EditText
            android:id="@+id/inputCode"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:background="@drawable/password_input_normal"
            android:layout_below="@+id/confirmPassword"
            android:layout_alignLeft="@+id/confirmPassword"
            android:inputType="number"
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/buttonCode"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/passwordcode_selector"
            android:layout_below="@+id/confirmPassword"
            android:layout_alignRight="@+id/confirmPassword"
            android:clickable="true"
            android:layout_marginTop="45dp"/>
        <ImageView
            android:id="@+id/modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/passwordmodify_selector"
            android:layout_below="@+id/inputCode"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"/>
    </RelativeLayout>

</LinearLayout>
