<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/grid_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_title_bar"
            android:id="@+id/include7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_below="@+id/include7"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/modify_psw_bg"
            android:layout_marginTop="18dp">

            <RelativeLayout
                android:layout_marginTop="1dp"
                android:id="@+id/modifyLoginPswLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改登录密码"
                    android:textSize="16sp"
                    android:id="@+id/textView30"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/wallet_black"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="2dp"
                android:id="@+id/modifyPayPswLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/modifyLoginPswLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改支付密码"
                    android:textColor="@color/wallet_black"
                    android:textSize="16sp"
                    android:id="@+id/textView31"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="2dp"
                android:id="@+id/forgetPayPswLayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/modifyPayPswLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记支付密码"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/wallet_black"
                    android:id="@+id/textView32"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
