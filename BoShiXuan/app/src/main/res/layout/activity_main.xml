<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.yinxun.boshixuan.activity.MainActivity">
    <RadioGroup
        android:id="@+id/tab_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_tab"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/tab_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/home_selector"
            android:paddingTop="6dp"
            android:textSize="9dp"
            android:gravity="center"
            android:text="首页"
            android:textColor="@color/white"
            android:button="@null"
            android:checked="false" />
        <RadioButton
            android:id="@+id/tab_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/news_selector"
            android:paddingTop="6dp"
            android:textSize="9dp"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/white"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/tab_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/wallet_selector"
            android:paddingTop="6dp"
            android:textSize="9dp"
            android:gravity="center"
            android:text="钱包"
            android:textColor="@color/white"
            android:button="@null" />
        <RadioButton
            android:id="@+id/tab_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/setting_selector"
            android:text="设置"
            android:paddingTop="6dp"
            android:textSize="9dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:button="@null" />
    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:id="@+id/tab_line"
        android:layout_height="1dp"
        android:layout_above="@id/tab_group"
        android:background="@color/black"/>
    <FrameLayout
        android:id="@+id/main_tab"
        android:layout_width="fill_parent"
        android:layout_above="@id/tab_line"
        android:layout_height="fill_parent"
        />
</RelativeLayout>
