<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:background="@drawable/order_bg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/productImage"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/order_default_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="芬迪FEDI黄色迷你单肩手提包"
            android:textColor="@color/wallet_black"
            android:textSize="15sp"
            android:layout_marginLeft="13.5dp"
            android:id="@+id/productName"
            android:layout_alignTop="@+id/productImage"
            android:layout_toRightOf="@+id/productImage"
            android:layout_toEndOf="@+id/productImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌："
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:layout_marginTop="17.5dp"
            android:id="@+id/textView62"
            android:layout_below="@+id/productName"
            android:layout_alignLeft="@+id/productName"
            android:layout_alignStart="@+id/productName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="芬迪（FENI）"
            android:id="@+id/productBrand"
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:layout_alignTop="@+id/textView62"
            android:layout_toRightOf="@+id/textView62"
            android:layout_toEndOf="@+id/textView62"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="押金："
            android:id="@+id/textView63"
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView62"
            android:layout_alignLeft="@+id/textView62"
            android:layout_alignStart="@+id/textView62" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12000"
            android:id="@+id/productDeposit"
            android:textColor="@color/recharge_red"
            android:textSize="13sp"
            android:layout_alignTop="@+id/textView63"
            android:layout_alignLeft="@+id/productBrand"
            android:layout_alignStart="@+id/productBrand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日租金："
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:layout_marginTop="11dp"
            android:id="@+id/textView64"
            android:layout_below="@+id/textView63"
            android:layout_alignLeft="@+id/textView63"
            android:layout_alignStart="@+id/textView63" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            android:id="@+id/productDayRent"
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:layout_alignTop="@+id/textView64"
            android:layout_toRightOf="@+id/textView64"
            android:layout_toEndOf="@+id/textView64" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未确认"
            android:textSize="13sp"
            android:textColor="@color/recharge_red"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12.5dp"
            android:id="@+id/textView65"
            android:layout_below="@+id/productDayRent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/order_bg2"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:layout_marginLeft="12.5dp"
            android:layout_marginTop="8dp"
            android:id="@+id/textView66"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="37320160712171900991596"
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:id="@+id/orderNo"
            android:layout_alignTop="@+id/textView66"
            android:layout_toRightOf="@+id/textView66"
            android:layout_toEndOf="@+id/textView66" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建时间："
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:layout_marginTop="11.5dp"
            android:id="@+id/textView67"
            android:layout_below="@+id/textView66"
            android:layout_alignLeft="@+id/textView66"
            android:layout_alignStart="@+id/textView66" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-07-12 17:19:00"
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:id="@+id/orderCreateTime"
            android:layout_alignTop="@+id/textView67"
            android:layout_toRightOf="@+id/textView67"
            android:layout_toEndOf="@+id/textView67" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款时间 ："
            android:id="@+id/textView68"
            android:textSize="13sp"
            android:layout_marginTop="10.5dp"
            android:layout_below="@+id/textView67"
            android:layout_alignLeft="@+id/textView67"
            android:layout_alignStart="@+id/textView67" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:id="@+id/orderPayTime"
            android:textColor="@color/bank_add_gray"
            android:textSize="13sp"
            android:layout_alignTop="@+id/textView68"
            android:layout_toRightOf="@+id/textView68"
            android:layout_toEndOf="@+id/textView68" />
    </RelativeLayout>
</LinearLayout>
