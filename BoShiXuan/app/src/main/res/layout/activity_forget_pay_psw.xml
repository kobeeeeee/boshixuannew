<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/register_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_title_bar"
            android:id="@+id/include8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textSize="17sp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="30.5dp"
            android:textColor="@color/white"
            android:id="@+id/textView33"
            android:layout_below="@+id/include8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phoneNoText"
            android:textColor="@color/white"
            android:layout_marginTop="23.5dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="19dp"
            android:layout_alignParentRight="true"
            android:hint="请输入手机号码"
            android:textColorHint="@color/modify_gray"
            android:gravity="left|center"
            android:padding="10dp"
            android:background="@drawable/modify_psw_input"
            android:layout_below="@+id/include8"
            android:inputType="number"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/textView33"
            android:layout_toEndOf="@+id/textView33" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_marginTop="52dp"
            android:id="@+id/textView34"
            android:layout_below="@+id/textView33"
            android:layout_alignLeft="@+id/textView33"
            android:layout_alignStart="@+id/textView33" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/newPswText"
            android:background="@drawable/modify_psw_input"
            android:hint="输入新密码"
            android:textColorHint="@color/modify_gray"
            android:gravity="left|center"
            android:padding="10dp"
            android:maxLength="6"
            android:textSize="13sp"
            android:layout_marginTop="30.5dp"
            android:layout_below="@+id/phoneNoText"
            android:layout_marginRight="19dp"
            android:inputType="textPassword"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/phoneNoText"
            android:layout_alignStart="@+id/phoneNoText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="确认密码"
            android:textSize="17sp"
            android:layout_marginTop="50dp"
            android:id="@+id/textView35"
            android:layout_below="@+id/textView34"
            android:layout_alignLeft="@+id/textView34"
            android:layout_alignStart="@+id/textView34" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirmPswText"
            android:hint="确认新密码"
            android:maxLength="6"
            android:textSize="13sp"
            android:background="@drawable/modify_psw_input"
            android:textColorHint="@color/modify_gray"
            android:textColor="@color/white"
            android:gravity="left|center"
            android:padding="10dp"
            android:layout_marginTop="30.5dp"
            android:layout_alignParentRight="true"
            android:inputType="textPassword"
            android:layout_marginRight="19dp"
            android:layout_below="@+id/newPswText"
            android:layout_alignLeft="@+id/newPswText"
            android:layout_alignStart="@+id/newPswText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:id="@+id/textView39"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/textView35"
            android:layout_alignLeft="@+id/textView35"
            android:layout_alignStart="@+id/textView35" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/verifyCodeText"
            android:gravity="center"
            android:textSize="13sp"
            android:inputType="number"
            android:background="@drawable/modify_psw_input"
            android:layout_marginTop="30.5dp"
            android:textColor="@color/white"
            android:maxLength="4"
            android:layout_below="@+id/confirmPswText"
            android:layout_alignLeft="@+id/confirmPswText"
            android:layout_alignStart="@+id/confirmPswText" />

        <Button
            android:text="获取验证码"
            android:textColor="@color/white"
            android:id="@+id/buttonCode"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="40dp"
            android:background="@drawable/registercode_selector"
            android:layout_below="@+id/confirmPswText"
            android:layout_toRightOf="@+id/verifyCodeText"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:clickable="true"
            android:layout_marginTop="30.5dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modifyPayPsw"
            android:src="@drawable/passwordmodify_selector"
            android:clickable="true"
            android:layout_below="@+id/verifyCodeText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30.5dp" />

    </RelativeLayout>
</LinearLayout>
